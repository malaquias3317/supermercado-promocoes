<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:id="@+id/img_produto"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginLeft="105dp">

        <TextView
            android:id="@+id/txt_descricao"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Descrição Produto"
            android:textColor="#363636"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_precoAntigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de R$ 00,00"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="por R$ 00,00"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:paddingTop="92dp"
        android:layout_marginLeft="200dp"
        >

        <TextView
            android:id="@+id/txt_validade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validade: 12/12/2012"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp"
            android:textAlignment="textEnd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="110dp"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />
    </LinearLayout>
</RelativeLayout>